<Window x:Class="Minesweeper.HighScoresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        xmlns:res="clr-namespace:Minesweeper.Properties"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.MenuScores}" Height="450" Width="800">
    <Grid>
        <DataGrid Name="DataGridEasy" 
                  ItemsSource="{Binding Path=HighScores}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static res:Resources.Name}" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="{x:Static res:Resources.Time}" Binding="{Binding Time}" SortDirection="Ascending"/>
                <DataGridTextColumn Header="{x:Static res:Resources.DifficultLevel}" Binding="{Binding DifficultLevel}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
