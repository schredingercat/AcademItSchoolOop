<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="DataTemplateCells">
            <Button Content="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}" 
                    Height="40" 
                    Width="40" 
                    Margin="1,1,1,1" 
                    MouseRightButtonUp="UIElement_OnMouseRightButtonUp"
                    Click="ButtonBase_OnClick"/>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplateRaws">
            <ItemsControl ItemsSource="{Binding}" ItemTemplate="{DynamicResource DataTemplateCells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </DataTemplate>

    </Window.Resources>
    <StackPanel>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="_Игра">
                    <MenuItem Name="MenuItemNewGame" 
                              Header="_Новая игра"/>
                    <MenuItem Name="MenuItemScores" 
                              Header="Таблица рекордов"
                              IsEnabled="False"/>
                    <MenuItem Name="MenuItemOptions" 
                              Header="Настройки"
                              IsEnabled="False"/>
                    <MenuItem Name="MenuItemExit" 
                              Header="_Выход" 
                              Click="MenuItemExit_OnClick"/>
                </MenuItem>
            </Menu>
        </DockPanel>
        <Grid>
            <ItemsControl Name="GameField" ItemTemplate="{DynamicResource DataTemplateRaws}"/>
        </Grid>
    </StackPanel>
</Window>
